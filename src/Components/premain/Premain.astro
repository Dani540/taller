---
interface Props{
    z_index: string
}

const { z_index } = Astro.props;
---

<div class="premain" style={{zIndex: z_index}}>
    <img src="/recursos/background.png" alt="background" class="background">
    <div class="premain-content" style={{zIndex: z_index}}>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis.</p>
    </div>
</div>

<style>
    .premain {
        position: relative;
        display: flex;
        justify-content: right;
        align-items: center;
        height: 40rem;
        background-color: #f5f5f5;
    }

    .background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 40rem;
        object-fit: cover;
        z-index: -1;
    }

    .premain-content {
        text-align: left;

        color: var(--title);
        font-size: 1.6rem;
        font-family: "Lato", 'Arial', sans-serif;
        font-weight: 600;

        background-color: var(--subtitle);

        width: 60%;
        max-width: 850px;
        height: 60rem;

        padding: 8% 150px 40px 50px;
        border-radius: 11px;

        margin-inline: 4.5rem;
        margin-top: 42rem;

    }
</style>