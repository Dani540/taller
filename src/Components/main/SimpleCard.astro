---
interface Props{
    img_source: string;
    subtitle: string
}

const { img_source, subtitle } = Astro.props;
---

<div class="container">
    <img src={img_source} alt="icon" class="icon"/>
    <h3>{subtitle}</h3>
</div>

<style>
    .container{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 2rem;
    }

    img {
        border-radius: 11px;
        max-width: 25rem;
    }

    h3 {
        font-size: 1.5rem;
        font-family: "Lato", 'Arial', sans-serif;
        font-weight: 600;
        color: var(--title);
        padding-top: 1rem;
    }
</style>
