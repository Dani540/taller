---
interface Props{
    img_source: string;
    title: string;
    subtitle: string;
    price: string;
    before_price ?: string;
}

const { img_source, title, subtitle, price, before_price } = Astro.props;
---

<div class="container">
    <img src={img_source} alt="icon" class="icon"/>
    <div class="content">
        <h1>{title}</h1>
        <h2>{subtitle}</h2>
        <section class="pricing">
            <h3>Rp {price}</h3>
            {before_price && <h4>{before_price}</h4>}
        </section>
    </div>
</div>

<style>
    img {
        max-width: 22rem;
    }

    .container{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        margin: 2rem;
        max-width: 22rem;

        background-color: #f5f5f5;


    }

    .container .content{
        padding-inline: 1rem;
    }

    h1, h2, h3{
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
    }

    h1 {
        font-size: 1.5rem;
        font-family: "Lato", 'Arial', sans-serif;
        font-weight: 600;
        color: var(--title);
    }

    h2 {
        font-size: 1rem;
        font-family: "Lato", 'Arial', sans-serif;
        color: var(--title);
        opacity: 0.8;
    }

    h3{
        font-size: 1.5rem;
        font-family: "Lato", 'Arial', sans-serif;
        font-weight: 600;
        color: var(--title);
    }

    .pricing{
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .pricing h4{
        text-decoration: line-through;
        font-size: 1rem;
        font-family: "Lato", 'Arial', sans-serif;
        color: var(--title);
        opacity: 0.8;
        margin-left: 3.5rem;
    }
</style>